<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bwfsurveybeta">

    <application
        android:name=".MyAmplifyApplication"
        tools:replace="android:name"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BwfSurveyBeta">

        <activity
            android:name=".AuthenticationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MenuActivity"
            android:label="Menu">
        </activity>

        <activity
            android:name=".InitialSurveyActivity"
            android:label="Initial Survey">
        </activity>

        <activity
            android:name=".FamilyCardSelectActivity"
            android:label="Select household">
        </activity>

        <activity
            android:name=".FollowUpSurveyActivity"
            android:label="FollowUp Survey">
        </activity>

        <activity
            android:name=".HealthCheckSurveyActivity"
            android:label="Health Check Survey">
        </activity>

        <activity
            android:name=".SWEMonthlySummaryActivity"
            android:label="SWE Monthly Summary">
        </activity>

        <activity
            android:name=".WaterSurveyHouseholdActivity"
            android:label="Household Water Survey">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>